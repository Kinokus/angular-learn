# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
ij_typescript_spaces_within_imports = true
ij_typescript_force_semicolon_style = true
ij_coffeescript_use_semicolon_after_statement = true
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true
ij_typescript_enforce_trailing_comma = whenmultiline
ij_any_array_initializer_right_brace_on_new_line = true
ij_any_array_initializer_new_line_after_left_brace = true
ij_any_array_initializer_wrap = on_every_item

[*.htm*]
ij_html_attribute_wrap = on_every_item
ij_html_space_after_tag_name = false
ij_html_align_attributes = true
ij_html_inline_tags = false
ij_html_new_line_before_first_attribute = when_multiline


[*.md]
max_line_length = off
trim_trailing_whitespace = false
